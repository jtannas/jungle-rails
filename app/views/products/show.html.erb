<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <!-- Display the new review form -->
    <div class="row">
      <h2>Reviews</h2>
      <% if current_user %>
        <div class="col-sm-12">
          <%= form_for([@product, Review.new]) do |f| %>
            <dl class="dl-horizontal">
              <dt><%= label_tag(:rating, "Rating") %></dt>
              <dd><%= f.select :rating, 1..5 %></dd>
              <dt><%= label_tag(:description, "Description") %></dt>
              <dd><%= f.text_area :description, :required => true %></dd>
              <dt>Submit Review</dt>
              <dd><%= f.submit "Submit" %></dd>
            </dl>
          <% end %>
        </div>
      <% end %>

      <!-- Display a list of reviews -->
      <div class="col-sm-12">
        <% @product.reviews.order(id: :desc).each do |review| %>
          <dl class="dl-horizontal">
            <dt>Rating</dt>
            <dd>
              <% for counter in 1..review.rating %>

                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
              <% end %>
              <% for counter in review.rating...5 %>
                <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
              <% end %>
            </dd>
            <dt>Reviewer</dt>
            <dd><%= review.user.name %></dd>
            <dt>Description</dt>
            <dd><%= review.description %></dd>
            <% if review.user == current_user %>
              <dt>Delete</dt>
              <dd><%= button_to "delete", product_review_path(:product_id => @product.id, :id => review.id), :method => :delete %></dd>
            <% end %>
          </dl>
        <% end %>
      </div>
    </div>

  </article>

</section>
