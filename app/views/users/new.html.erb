<h1>Signup!</h1>

<%= form_for @user, url: '/users' do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prevented you from creating an account:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  Name: <%= f.text_field :name, :required => true %><br/>
  Email: <%= f.email_field :email, :required => true %><br/>
  Password: <%= f.password_field :password, :required => true%><br/>
  Password Confirmation: <%= f.password_field :password_confirmation, :required => true%><br/>
  <%= f.submit "Submit" %>

<% end %>
